{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server (TS)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/server/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}
